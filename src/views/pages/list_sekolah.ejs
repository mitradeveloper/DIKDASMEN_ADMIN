<div class="container-fluid p-0">
    <div class="row">
        <div class="col">
            <h5><%= title%></h5>
        </div>
        <div class="col-sm text-end me-3">
            <form action="#" method="post">
                <div class="input-group">
                    <input type="text" class="form-control form-control-sm rounded-start" placeholder="Pencarian" aria-label="Pencarian" id="search" name="search">
                    <button class="btn btn-primary btn-sm rounded-end pe-2" type="submit"><i class="bi bi-search me-2"></i>Cari</button>
                </div>
            </form>
        </div>
    </div>
    <!-- <button type="button" class="btn badge btn-success fw-normal" data-bs-toggle="modal" data-bs-target="#addsekolah"> <i class="bi bi-plus-circle-fill"></i> Tambah Sekolah</button> -->

    <hr>
    <% if (succ.length !== 0) { %>
        <div class="alert alert-success mt-2" role="alert"><%= succ %></div>
    <% } %>
    <% if (updatesucc.length !== 0) { %>
        <div class="alert alert-success mt-2" role="alert"><%= updatesucc %></div>
    <% } %>
    <% if (exist.length !== 0) { %>
        <div class="alert alert-danger mt-2" role="alert"><%= exist %></div>
    <% } %>
    <% if (del.length !== 0) { %>
        <div class="alert alert-success mt-2" role="alert"><%= del %></div>
    <% } %>
    <table class="table table-sm table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th class="text-center" scope="col" style="width: 5%;">No</th>
                <th class="text-center" scope="col" style="width: 30%;">Nama Sekolah</th>
                <!-- <th class="text-center" scope="col" style="width: 15%;">Status</th> -->
                <th class="text-center" scope="col" style="width: 7%;">Lihat Periode</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < data.length; i++) { %> 
                <tr>
                    <th class="text-center" scope="row"><%= no++ %></th>
                    <th class="text-center" style="display:none" scope="row"><%= data[i].id %></th>
                    <td class="text-left" scope="row"><%= data[i].namasekolah %></td>
                    <!-- <td class="text-left" scope="row">
                        <span class="badge bg-success">Sudah Sinkronisasi</span>
                        <span class="badge bg-danger">Belum Sinkronisasi</span>
                    </td> -->
                    <td class="text-center" scope="row">
                        <a href="/listperiodesinkron?appsekolah=<%= btoa(data[i].kodesekolah) %> %>" class="btn badge btn-success fw-normal"><i class="bi bi-eye-fill"></i> List periode </a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>